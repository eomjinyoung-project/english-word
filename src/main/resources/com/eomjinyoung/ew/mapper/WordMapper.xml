<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eomjinyoung.ew.dao.WordDao">

  <resultMap type="word" id="wordMap">
    <id column="no" property="no"/>
    <result column="name" property="name"/>
    <result column="meaning" property="meaning"/>
    <result column="cdt" property="createdDate"/>
  </resultMap>

  <sql id="selectColumns">
    no, name, meaning, cdt
  </sql>
 
  <select id="findAll" resultMap="wordMap">
    select 
      <include refid="selectColumns"/>
    from ew_word
  </select>

  <select id="findByNo" resultMap="wordMap" parameterType="int">
    select 
      <include refid="selectColumns"/>
    from ew_word
    where no=#{value}
  </select>
  
  <select id="findByName" resultMap="wordMap" parameterType="string">
    select 
      <include refid="selectColumns"/>
    from ew_word
    where name=#{value}
  </select>
  
  <insert id="insert" parameterType="word" useGeneratedKeys="true" keyColumn="no" keyProperty="no">
    insert into ew_word(name, meaning) 
    VALUES(#{name},#{meaning})
  </insert>
  
  <update id="update" parameterType="word">
    update ew_word set 
        name=#{name},
        meaning=#{meaning} 
    where no=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from ew_word 
    where no=#{value}
  </delete>
  
  <insert id="insertInGroupByWordNo" parameterType="map">
    insert into ew_testword(wno, wgno) 
    VALUES(#{wordNo},#{wordGroupNo})
  </insert>
  
  <insert id="insertInGroupByWordName" parameterType="map">
    insert into ew_testword(wno, wgno) 
    VALUES((select no from ew_word where name=#{wordName}),#{wordGroupNo})
  </insert>
</mapper>